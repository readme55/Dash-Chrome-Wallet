{
  "name": "Dash Chrome Wallet",
  "main": "index.html",
  "chromium-args": "--enable-logging=stderr --mixed-content --load-extension='./app'",
  "dependencies": {
    "nw": "^0.46.3"
  },
  "version": "1.7.0",
  "devDependencies": {
    "nwjs-builder-phoenix": "^1.15.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:old": "nw .",
    "dist": "build --tasks win-x86,linux-x86,linux-x64,mac-x64 --mirror https://dl.nwjs.io/ .",
    "start": "run --x86 --mirror https://dl.nwjs.io/ ."
  },
  "build": {
    "nwVersion": "0.46.3",
    "packed": false,
    "targets": [
      "zip"
    ],
	"files": [
	  "**/*"
	],
	"excludes": [
	  "**/node_modules",
      "**/node_modules/**/*"
	],
    "win": {
      "icon": "./app/img/icon128.ico"
    },
    "mac": {
      "icon": "./app/img/icon128.png"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "window": {
    "id": "myNWJS-ID",
    "title": "Dash Chrome Wallet (Desktop Edition)",
    "icon": "./app/img/icon128.png",
    "frame": true,
    "width": 575,
    "height": 575,
    "position": "center"
  }
}
